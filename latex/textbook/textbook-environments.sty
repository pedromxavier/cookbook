    }

    \newcommand\inputikz[2][]{
        \ifthenelse{\equal{#1}{}}{%% IF
            \input{tikz/#2.tikz}
        }{%% ELSE
            \resizebox{#1}{!}{%
                \input{tikz/#2.tikz}
            }
        }
    }

